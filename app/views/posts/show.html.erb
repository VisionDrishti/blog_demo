<h1> Show Posts </h1>

<%= @post.title%>
<br>
<%= @post.body%>
<br>


<h1> Photos</h1>
 <% @post.pics.each do |pic| %>
 <div>
    <%= image_tag(pic, :width => 100) %>
  </div>
  <% end %>
  

<h2>Comments</h2>
<%= render @post.comments %>


<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<li><%= link_to 'edit' , edit_post_path(@post)%></li>

 <li><%= link_to "Back to posts", posts_path %></li>

  <li><%= link_to "Destroy", post_path(@post), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
